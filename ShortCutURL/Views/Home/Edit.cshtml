@model ShortCutURL.Models.DataModel.ShortUrlView

@{
    ViewBag.Title = "Редактирование сокращенного URL";
}

    <h2>Редактирование сокращенного URL</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal" method="post" action="~/Home/Edit">
    <hr />
    
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="form-group">
    @Html.LabelFor(model => model.UrlValue, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(model => model.UrlValue, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.UrlValue, "", new { @class = "text-danger" })
    </div>
</div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Сохранить" class="btn btn-default" />
            <input type="hidden" name="short_url_id" value=model.ID/>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Statistics")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
